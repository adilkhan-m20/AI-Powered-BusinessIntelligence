
# backend/.env - Backend Environment Variables

# Application Settings
APP_NAME="MultiModal AI Document Processing"
VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./multimodal_ai.db
# For PostgreSQL: postgresql+asyncpg://user:pass@localhost/dbname
# For MySQL: mysql+aiomysql://user:pass@localhost/dbname

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service Integration
AI_SERVICE_URL=http://localhost:3000
AI_SERVICE_PATH=../ai-service

# OpenAI Configuration (copy from ai-service/.env)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=.pdf,.txt,.docx,.xlsx,.csv
UPLOAD_DIRECTORY=./uploads

# Task Queue Settings
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=3600  # 1 hour in seconds
WORKER_COUNT=3

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30
LOG_LEVEL=INFO

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS_PER_USER=5

# CORS Settings (for development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Email Settings (for notifications - optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@yourdomain.com